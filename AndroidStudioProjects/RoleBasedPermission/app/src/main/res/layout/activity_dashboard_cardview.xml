<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/inner_layout"
    style="@style/CardView.Light"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/inner_layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_dashboard_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_launcher_background"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_dashboard_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15dp"
            android:text="HR55A 0001"
            app:layout_constraintLeft_toRightOf="@+id/iv_dashboard_1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_dashboard_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15dp"
            android:text="HR55A 0001"
            android:textAlignment="center"
            app:layout_constraintLeft_toRightOf="@+id/iv_dashboard_1"
            app:layout_constraintTop_toBottomOf="@+id/tv_dashboard_1" />

        <TextView
            android:id="@+id/tv_dashboard_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="HR55A 0001"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintLeft_toRightOf="@+id/tv_dashboard_2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:id="@+id/v_dashboard_1"
            app:layout_constraintTop_toBottomOf="@+id/iv_dashboard_1"
            />

        <ImageView
            android:id="@+id/iv_dashboard_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_launcher_background"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_dashboard_1" />

        <TextView
            android:id="@+id/tv_dashboard_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="HR55A 0001"
            app:layout_constraintLeft_toRightOf="@+id/iv_dashboard_2"
            app:layout_constraintTop_toBottomOf="@+id/v_dashboard_1" />

        <TextView
            android:id="@+id/tv_dashboard_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HR55A 0001"
            app:layout_constraintLeft_toRightOf="@+id/iv_dashboard_2"
            app:layout_constraintTop_toBottomOf="@+id/tv_dashboard_4" />

        <TextView
            android:id="@+id/tv_dashboard_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HR55A 0001"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintLeft_toRightOf="@+id/tv_dashboard_5"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/v_dashboard_1" />
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:id="@+id/v_dashboard_2"
            app:layout_constraintTop_toBottomOf="@+id/iv_dashboard_2"
            />


        <ImageView
            android:id="@+id/iv_dashboard_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_launcher_background"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/v_dashboard_2" />

        <TextView
            android:id="@+id/tv_dashboard_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HR55A 0001"
            app:layout_constraintLeft_toRightOf="@+id/iv_dashboard_3"
            app:layout_constraintTop_toBottomOf="@+id/v_dashboard_2" />

        <TextView
            android:id="@+id/tv_dashboard_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HR55A 0001"
            app:layout_constraintLeft_toRightOf="@+id/iv_dashboard_3"
            app:layout_constraintTop_toBottomOf="@+id/tv_dashboard_7" />

        <TextView
            android:id="@+id/tv_dashboard_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HR55A 0001"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintLeft_toRightOf="@+id/tv_dashboard_8"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/v_dashboard_2" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>






